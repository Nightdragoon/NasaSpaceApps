@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- Hero de fondo con foto y gradiente -->
<section class="hero-bg d-flex align-items-start align-items-lg-center min-vh-100 py-4 py-lg-0">

  <div class="container position-relative">
    <!-- Encabezado -->
    <div class="row mb-4 mb-lg-5">
      <div class="col-12 d-flex align-items-center gap-3">
        <img src="~/img/Captura_de_pantalla_2025-10-04_130505-removebg-preview.png"
             alt="Logo"
             class="brand-logo img-fluid" />
        <h1 class="create-title m-0">Create Account</h1>
      </div>
    </div>

    <!-- Contenido: columna izquierda (form) -->
    <div class="row justify-content-start">
      <div class="col-12 col-md-10 col-lg-7 col-xl-6">
        <form class="card form-contact shadow-sm">
          <div class="card-body p-4">

            <!-- Nombre -->
            <div class="mb-3">
              <label for="firstName" class="form-label fw-normal">First name</label>
              <input id="firstName" name="FirstName" type="text"
                     class="form-control form-control-ux"
                     placeholder="John" required>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label fw-normal">Email</label>
              <input id="email" name="Email" type="email"
                     class="form-control form-control-ux"
                     placeholder="you@example.com" required>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label fw-normal">Password</label>
              <input id="password" name="Password" type="password"
                     class="form-control form-control-ux"
                     placeholder="••••••••" required>
            </div>

            <!-- Bio -->
            <div class="mb-4">
              <label for="bio" class="form-label fw-normal">Bio (optional)</label>
              <textarea id="bio" name="Bio"
                        class="form-control form-control-ux"
                        rows="3"
                        placeholder="Tell us something about you"></textarea>
            </div>

            <!-- Botón -->
            <div class="d-grid">
              <button type="submit" class="btn btn-dark btn-ux">Create</button>
            </div>

            <!-- Link -->
            <div class="mt-3">
              <a href="/Account/ForgotPassword" class="text-decoration-underline link-ux">Forgot password?</a>
            </div>

          </div>
        </form>
      </div>
    </div>
  </div>
</section>